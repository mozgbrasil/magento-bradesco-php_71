    <crontab>
        <jobs>
            <mozg_bradesco_process_notification_queue>
                <schedule>
                    <cron_expr>*/1 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>mozg_bradesco/cronjob::updateNotificationQueue</model>
                </run>
            </mozg_bradesco_process_notification_queue>
            <mozg_bradesco_trigger_notification>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>mozg_bradesco/cronjob::triggerNotification</model>
                </run>
            </mozg_bradesco_trigger_notification>
        </jobs>
    </crontab>
