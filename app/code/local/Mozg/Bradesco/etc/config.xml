                <model>mozg_bradesco/method_shopfacil_boleto</model>
                <group>mozg_payment</group>
                <debug>1</debug>
                <allowspecific>1</allowspecific>
                <specificcountry>BR</specificcountry>
                <order_underpaid_status></order_underpaid_status>
                <order_overpaid_status></order_overpaid_status>
                <visible_type>both</visible_type>
                <cedente>ACME (American Company Makes Everything)</cedente>
                <carteira>25</carteira>
                <vencimento>5</vencimento>
                <mensagem_cabecalho>mensagem de cabecalho</mensagem_cabecalho>
                <instrucoes><![CDATA[- instrucao_linha_1
- instrucao_linha_2
- instrucao_linha_3]]></instrucoes>
            </mozg_bradesco_shopfacil_boleto>
            <mozg_bradesco_shopfacil_eletronictransfer translate="title" module="mozg_bradesco">
